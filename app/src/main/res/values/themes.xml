<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Luguu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/encodesans_regular</item>
        <item name="fontFamily">@font/encodesans_regular</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

    </style>

    <style name="Theme.Luguu.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Luguu.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.Luguu.PopupOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
</resources>